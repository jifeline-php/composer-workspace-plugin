{
    "name": "factorit/composer-workspace-plugin",
    "description": "Composer plugin for a monorepo workspace",
    "type": "composer-plugin",
    "license": "proprietary",
    "require": {
        "php": "^8.1",
        "composer-plugin-api": "^2.3",
        "symfony/finder": "^6.1"
    },
    "require-dev": {
        "composer/composer": "^2.3",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Factorit\\ComposerWorkspacePlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Factorit\\ComposerWorkspacePlugin\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "class": "Factorit\\ComposerWorkspacePlugin\\Plugin"
    },
    "config": {
        "sort-packages": true
    }
}
